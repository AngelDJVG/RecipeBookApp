<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <GridLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:columnCount="4"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="6"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_bg_rounded"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_lupa" />

            <EditText
                android:id="@+id/buscadorEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:background="@android:color/transparent"
                android:hint="Buscar recetas"
                android:textColor="@color/black"
                android:textColorHint="#5C5C5C" />
        </LinearLayout>
    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_contenedor_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/layout_botones_paginado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:background="#00FFFFFF">

        <Button
            android:id="@+id/btn_anterior_paginado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/btn_estado_color"
            android:text="&lt;"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texto_paginado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/texto_paginado" />

        <Button
            android:id="@+id/btn_siguiente_paginado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/btn_estado_color"
            android:text="&gt;"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_navegador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="top"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:text="Inicio"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:icon="@drawable/ic_casa"
                app:iconGravity="textTop"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="#000000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:text="AÃ±adir"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:icon="@drawable/ic_plus"
                app:iconGravity="textTop"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="#000000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_saved"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:text="Guardado"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:icon="@drawable/ic_guardado"
                app:iconGravity="textTop"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="#000000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>